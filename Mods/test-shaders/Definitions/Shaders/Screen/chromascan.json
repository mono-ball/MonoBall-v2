{
  "id": "base:shader:chromascan",
  "name": "Chroma Scan",
  "description": "Chromatic aberration with CRT-style scanlines and subtle distortion",
  "sourceFile": "Shaders/ChromaScan.mgfxo",
  "layer": 2,
  "compatibleWith": ["base:shader:synthsun", "base:shader:retrogrid"],
  "parameters": [
    { "name": "Time", "type": "float", "defaultValue": 0.0 },
    { "name": "ScreenSize", "type": "float2", "defaultValue": [1280.0, 720.0] },
    { "name": "ScanlineCount", "type": "float", "defaultValue": 300.0, "min": 100.0, "max": 600.0, "description": "Number of scanlines" },
    { "name": "ScanlineIntensity", "type": "float", "defaultValue": 0.15, "min": 0.0, "max": 0.5, "description": "Scanline darkness" },
    { "name": "ChromaOffset", "type": "float", "defaultValue": 0.003, "min": 0.0, "max": 0.01, "description": "RGB channel separation" },
    { "name": "ChromaPulse", "type": "float", "defaultValue": 0.5, "min": 0.0, "max": 1.0, "description": "Pulsing chromatic effect" },
    { "name": "Distortion", "type": "float", "defaultValue": 0.001, "min": 0.0, "max": 0.01, "description": "Screen distortion amount" },
    { "name": "TintColor", "type": "float3", "defaultValue": [1.0, 0.95, 1.05], "description": "Subtle color tint" }
  ]
}

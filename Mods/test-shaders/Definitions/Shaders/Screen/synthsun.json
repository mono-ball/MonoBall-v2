{
  "id": "base:shader:synthsun",
  "name": "Synth Sun",
  "description": "80s synthwave sun with gradient and horizontal stripes",
  "sourceFile": "Shaders/SynthSun.mgfxo",
  "layer": 1,
  "compatibleWith": ["base:shader:retrogrid", "base:shader:chromascan"],
  "parameters": [
    { "name": "Time", "type": "float", "defaultValue": 0.0 },
    { "name": "ScreenSize", "type": "float2", "defaultValue": [1280.0, 720.0] },
    { "name": "SunSize", "type": "float", "defaultValue": 0.25, "min": 0.1, "max": 0.5, "description": "Size of the sun" },
    { "name": "SunPosition", "type": "float2", "defaultValue": [0.5, 0.4], "description": "Position of the sun center" },
    { "name": "SunColor1", "type": "float3", "defaultValue": [1.0, 0.2, 0.5], "description": "Hot pink sun top color" },
    { "name": "SunColor2", "type": "float3", "defaultValue": [1.0, 0.6, 0.1], "description": "Orange sun bottom color" },
    { "name": "SkyTop", "type": "float3", "defaultValue": [0.1, 0.0, 0.2], "description": "Deep purple sky top" },
    { "name": "SkyBottom", "type": "float3", "defaultValue": [0.3, 0.0, 0.3], "description": "Purple sky at horizon" },
    { "name": "HorizonLine", "type": "float", "defaultValue": 0.65, "min": 0.3, "max": 0.9, "description": "Horizon position" },
    { "name": "GlowIntensity", "type": "float", "defaultValue": 0.5, "min": 0.0, "max": 1.0, "description": "Sun glow brightness" }
  ]
}

    { "name": "ColorVariation", "type": "float", "defaultValue": 0.3, "min": 0.0, "max": 1.0 },
    { "name": "DepthVariation", "type": "float", "defaultValue": 0.35, "min": 0.0, "max": 1.0 },
    { "name": "BlendMode", "type": "float", "defaultValue": 0.0, "min": 0.0, "max": 2.0 }
